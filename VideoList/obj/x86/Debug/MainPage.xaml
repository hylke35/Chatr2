<Page
    x:Class="VideoList.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VideoList"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="50,0">
        <Grid.Background>
            <ImageBrush Stretch="None" ImageSource="Assets/bg.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="#0077b6" >
            <TextBlock Text="Add video to the list"
                       FontFamily="Century Gothic"
                       FontSize="30"
                       Foreground="white"
                       TextAlignment="Center"
                       Margin="0,0,0,250"/>
        </StackPanel>
        <Grid Grid.Row="1" Background="white" Margin="0,50,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0"
                     Height="30"
                     FontSize="25"
                     BorderThickness="0,0,0,3"
                     BorderBrush="Black" 
                     Background="#66FFFFFF" 
                     FocusVisualSecondaryBrush="#99FFFFFF"
                     />
            <Button Grid.Column="1"
                     Margin="10,0,0,0"
                     Content="Add"
                     FontSize="21"
                     Width="220"
                     Foreground="white"
                     Background="#0077b6"
                     CornerRadius="5"
                     Padding="15,5,15,5" 
                     FocusVisualPrimaryBrush="Black" />
        </Grid>

        <Grid Grid.Row="2" Margin="0,100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0"
                        Background="White"
                        Margin="0,0,250,0"
                        Padding="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Text="Video List"
                       FontFamily="Century Gothic"
                       FontSize="30"
                       Foreground="black"
                       TextAlignment="Center"/>
                <TextBlock Grid.Row="1"
                           Text="https://www.youtube.com/watch?v=dQw4w9WgXcQ"
                           FontFamily="Century Gothic"
                           FontSize="15"
                           Foreground="black"/>
                <TextBlock Grid.Row="2"
                           Text="https://www.youtube.com/watch?v=dQw4w9WgXcQ"
                           FontFamily="Century Gothic"
                           FontSize="15"
                           Foreground="black"/>
                <TextBlock Grid.Row="3"
                           Text="https://www.youtube.com/watch?v=dQw4w9WgXcQ"
                           FontFamily="Century Gothic"
                           FontSize="15"
                           Foreground="black"/>
            </Grid>

            <Grid Grid.Column="1"
                        Background="White"
                        Padding="20"
                        Width="400">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Lobby"
                       FontFamily="Century Gothic"
                       FontSize="30"
                       Foreground="black"
                       TextAlignment="Center"/>
                <TextBlock Grid.Row="1" Text="Hylke"
                           FontFamily="Century Gothic"
                           FontSize="25"
                           Foreground="black"
                           TextAlignment="Center"/>
                <TextBlock Grid.Row="2" Text="Hemran"
                           FontFamily="Century Gothic"
                           FontSize="25"
                           Foreground="black"
                           TextAlignment="Center"/>
                <TextBlock Grid.Row="3" Text="Mo"
                           FontFamily="Century Gothic"
                           FontSize="25"
                           Foreground="black"
                           TextAlignment="Center"/>
            </Grid>

        </Grid>
        
    </Grid>
</Page>

