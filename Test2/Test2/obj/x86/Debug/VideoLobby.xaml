        <TextBlock HorizontalAlignment="Left" Margin="781,137,0,0" Text="Lobby" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24"/>
        <Button x:ConnectionId='6' x:Name="readyButton" Content="Not ready" Margin="995,514,0,0" VerticalAlignment="Top"                           Width="229"/>
        <TextBlock x:ConnectionId='7' HorizontalAlignment="Left" Margin="101,516,0,0" Text="Lobby Code:" TextWrapping="Wrap" VerticalAlignment="Top"                                               FontSize="20"/>
        <TextBlock x:ConnectionId='8' x:Name="lobbyCodeLabel" HorizontalAlignment="Left" Margin="216,516,0,0" Text="-" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.431,-2.912" FontSize="20"/>
