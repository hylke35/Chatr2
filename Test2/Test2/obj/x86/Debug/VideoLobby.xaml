    xmlns:local="using:Test2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="600">

    <Grid Height="600">
        <TextBox x:ConnectionId='2' x:Name="linkBox" HorizontalAlignment="Left" Margin="137,75,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="724"/>
        <Button x:ConnectionId='3' x:Name="addButton" Content="Add" Margin="880,75,0,0" VerticalAlignment="Top"                         Width="229"/>
        <ListBox x:ConnectionId='4' x:Name="userList" Margin="781,179,0,136" HorizontalAlignment="Left" Width="327"/>
        <ListBox x:ConnectionId='5' x:Name="videoList" Margin="139,179,0,136" IsDoubleTapEnabled="True"                                       Width="576" HorizontalAlignment="Left"/>
